{
    "extends": [
        "next/core-web-vitals",
        "plugin:storybook/recommended"
    ],
    "plugins": [
        "perfectionist",
        "unused-imports"
    ],
    "rules": {
        "unused-imports/no-unused-imports": "warn",
        "unused-imports/no-unused-vars": [
            "warn",
            {
                "vars": "all",
                "varsIgnorePattern": "^_",
                "args": "after-used",
                "argsIgnorePattern": "^_"
            }
        ],
        "perfectionist/sort-imports": [
            "warn",
            {
                "type": "natural",
                "order": "asc"
            }
        ]
    }
}